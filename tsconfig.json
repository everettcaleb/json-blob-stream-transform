{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "noImplicitThis": true,
    "declaration": true,
    "baseUrl": "./",
    "pretty": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}
